        ],
        "url": { "raw": "{{baseUrl}}/api/users/1/role", "host": ["{{baseUrl}}"], "path": ["api","users","1","role"] },
        "body": { "mode": "raw", "raw": "{\n  \"role\": \"IT_STAFF\"\n}" }
      }
    },
    {
      "name": "Admin - Update department",
      "request": {
