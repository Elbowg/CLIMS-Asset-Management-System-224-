        "url": { "raw": "{{baseUrl}}/api/users/1/department", "host": ["{{baseUrl}}"], "path": ["api","users","1","department"] },
        "body": { "mode": "raw", "raw": "{\n  \"departmentId\": 1\n}" }
      }
    },
